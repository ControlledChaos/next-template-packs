<phpunit
	bootstrap="bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<php>
		<const name="BP_TEMPLATE_PACK" value="nouveau;BP Nouveau;1.0.0;bp-nouveau" />
		<const name="WP_TESTS_MULTISITE" value="1" />
	</php>
	<groups>
		<exclude>
			<group>ajax</group>
		</exclude>
	</groups>
	<testsuites>
		<testsuite>
			<directory suffix=".php">../../bp-templates/bp-nouveau/testcases/</directory>
		</testsuite>
	</testsuites>
</phpunit>
